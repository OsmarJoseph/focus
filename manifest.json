{
  "manifest_version": 2,
  "name": "focus",
  "description": "make me focused",
  "version": "0.0.1",
  "icons": {
    "64": "./monk.png",
    "32": "./favicon_io/favicon-32x32.png"
  },
  "permissions": [
    "nativeMessaging"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@focus-addon",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}
